{% if 'Firewall' in group_names %}
security {
{% for address_book in firewall %}
    address-book {
        global {
replace:            address {{ address_book }} {{ address_book.address_entry }};
        }
    }
    policies {
        from-zone trust to-zone untrust {
replace:            policy {{ address_book.policy_name }} {
                match {
                    source-address {{ address_book }};
                    destination-address any;
                    application any;
                }
                then {
                    permit;
                }
            }
        }
    }
{% endfor %}
}
{% endif %}
